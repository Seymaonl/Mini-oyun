<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_oyuncu"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/indir" />

        <ImageView
            android:id="@+id/image_bilgisayar"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/indir" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tV_oyuncupuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24dp"
            android:text="Oyuncu:" />

        <TextView
            android:id="@+id/tV_bilgisayarpuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24dp"
            android:text="Bilgisayar:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_tas"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="TAŞ" />

        <Button
            android:id="@+id/button_kagit"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="KAĞIT" />

        <Button
            android:id="@+id/button_makas"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="MAKAS" />
    </LinearLayout>
</LinearLayout>